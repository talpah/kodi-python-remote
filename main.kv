<RootWidget>:
    StackLayout:
        orientation: 'lr-tb'
        padding: 10
        spacing: 5
        Label:
            text: "Volume"
            size_hint: 0.1, None
            height: 40
        Slider:
            id: volslider
            min:0
            step:1
            max:100
            height: 40
            size_hint: 0.9, None
            on_touch_up: root.set_volume()
        Label:
            id: nowplaying
            text: ""
            size_hint: 1, None
            height: 40
        Button:
            text: "[_]"
            size_hint: root.xhint, root.yhint
            on_press: root.stop()
        Button:
            text: "||>"
            size_hint: root.xhint, root.yhint
            on_press: root.play_pause()
        Label:
            text: "Favourites"
            size_hint: 1, None
            height: 40
        StackLayout:
            id: favlist
